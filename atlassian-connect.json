{
    "key": "ProjectBurndownChart",
    "name": "Project Burndown Chart",
    "description": "Project wide burndown chart.",
    "baseUrl": "{{localBaseUrl}}",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "installed"
    },
    "scopes": [
        "READ"
    ],
    "apiMigrations":{
        "signed-install": true
    },
    "modules": {
        "generalPages": [
            {
                "key": "project-burndown-chart-page-jira",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Project Burndown Chart"
                },
                "url": "/project-burndown-chart",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            },
            {
                "key": "project-burndown-chart-page-confluence",
                "location": "system.header/left",
                "name": {
                    "value": "Project Burndown Chart"
                },
                "url": "/project-burndown-chart",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
    }
}
